<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" 
      spacing="5.0" fx:controller="ifpr.pgua.eic.biblioteca.telas.CadastroRevista">

    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>

    <Label text="Titulo:" labelFor="$tfTitulo" />
    <TextField fx:id="tfTitulo"/>

    <Label text="Editora:" labelFor="$tfEditora" />
    <TextField fx:id="tfEditora"/>
    
    <Label text="Número:" labelFor="$tfNumero" />
    <TextField fx:id="tfNumero"/>
    
    <Label text="Páginas:" labelFor="$tfPaginas" />
    <TextField fx:id="tfPaginas"/>

    <Label text="Ano da Publicação:" labelFor="$tfAnoPublicacao "/>
    <TextField fx:id="tfAnoPublicacao"/>

    <HBox spacing="5.0">
        <Button text="Adicionar" onAction="#cadastrar"/>
        <Button text="Limpar" onAction="#limpar" styleClass="botao-limpar"/>
    </HBox>
        
</VBox>